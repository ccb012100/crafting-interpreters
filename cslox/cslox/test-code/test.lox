fun fib(n) {
  if (n <= 1) return n;
  return fib(n - 2) + fib(n - 1);
}

for (var i = 0; i < 5; i = i + 1) {
  print "fib(" + i + "): " + fib(i);
}
// fib(0): 0
// fib(1): 1
// fib(2): 1
// fib(3): 2
// fib(4): 3

fun makeCounter() {
  var i = 0;
  fun count() {
    i = i + 1;
    return i;
  }

  return count;
}

var counter = makeCounter();
print "counter: " + counter(); // Prints counter: "1".
print "counter: " + counter(); // Prints counter: "2"

fun thrice(fn) {
  for (var i = 1; i <= 3; i = i + 1) {
    fn(i);
  }
}

thrice(fun (a) {
  print a;
});
// "1".
// "2".
// "3".

